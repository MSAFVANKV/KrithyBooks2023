                      <li><a class="dropdown-item" href="#">Another action</a></li>
                      <li><a class="dropdown-item" href="#">Something else here</a></li>
                    </ul>
                </div>
                <div class="dropdown col-6 d-flex justify-content-end">
                    <button class="btn text-uppercase btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                      Category
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                      <li><a class="dropdown-item" href="#">Action</a></li>
                      <li><a class="dropdown-item" href="#">Another action</a></li>
                      <li><a class="dropdown-item" href="#">Something else here</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- new release -->
        <div>
            <h3 class="text-center mt-4 ">
              <u class="color-G">
                <span class="text-black text-uppercase">
                  New Releases
                </span>
              </u>
            </h3>  
          </div>
            <div class="container">
                <div class="row mt-3">
                  <div class="col-lg-4 col-md-6 col-sm-12 d-flex justify-content-center mt-3 mb-4">
                    <div class="card shadow" style="width: 16rem;">
                      <img style="max-height: 300px; object-fit: cover;" class="card-img-top img-fluid" src="/img/books/joseph/44476287644115-daivathinte-charan.jpg" alt="Book image">
                      <div class="card-body">
                        <h5 class="card-title text-center">Book Name</h5>
                        <div class="d-flex justify-content-between">
                          <p class="card-text text-success fw-bolder">₹1,499</p>
                          <p class="card-text text-warning fw-bold"><del>₹1,999</del></p>
                          <p class="card-text">25%off</p>
                        </div>
                        <p class="text-center">Rating:</p>
                      </div>
                    </div>
                  </div>
                  <!-- Repeat the above structure for the other two cards. -->
                  <div class="col-lg-4 col-md-6 col-sm-12 d-flex justify-content-center mt-3 mb-4">
                    <div class="card shadow" style="width: 16rem;">
                      <img style="max-height: 300px; object-fit: cover;" class="card-img-top img-fluid"
                       src="/img/books/basheer/49743355524311-pavapettavarude.jpg" alt="Book image">
                      <div class="card-body">
