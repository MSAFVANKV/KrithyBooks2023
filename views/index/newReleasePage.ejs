  <% if(listing !=null){ %>
    <div class="container-fluid">
      <div class="row ">
        <!-- filter sidebar -->
        <div class="col-md-2 col-sm-1 bg-light">
          <!--  -->
          <% if(listingName !=null){%>
            <div class="justify-content-center d-flex">
              <h5 class=" mt-3">
                <u class="color-G">
                  <span class="text-black text-uppercase text-center ">
                    <%=listingName%>
                  </span>
                </u>
              </h5>
            </div>
            <%}%>

              <!--  -->


              <% categories.forEach(category=> { %>
                <div>
                  <input type="checkbox" name="category" value="<%= category.name %>" id="<%= category.name %>"
                    onchange="filter(this, '<%= category.name %>')">
                  <label for="<%= category.name %>">
                    <%= category.name %>
                  </label>
                </div>
                <% }); %>
                  <!-- price range -->
                  <!-- price range -->
                  <div class="my-4">
                    <h5 class="my-3">Price Range:</h5>
                    <div class="d-flex justify-content-center">
                      <div id="price-range" class="w-75"></div>
                    </div>
                    <!--  -->

                    <!-- Input fields to display selected range -->
                    <div class="my-2 d-flex justify-content-between">
                      <div class="input-group input-group-sm mb-3">
                        <span class="input-group-text" id="inputGroup-sizing-sm">Min</span>
                        <input type="text" class="form-control" aria-label="Sizing example input"
                          aria-describedby="inputGroup-sizing-sm" id="input-lower" readonly>
                      </div>
                      <!--  -->
                      <div class="input-group input-group-sm mb-3">
                        <span class="input-group-text" id="inputGroup-sizing-sm">Max</span>
                        <input type="text" class="form-control" aria-label="Sizing example input"
                          aria-describedby="inputGroup-sizing-sm" id="input-upper" readonly>
                      </div>
                    </div>
                    
                    <!-- The Clear Filter button -->
                    <div class="my-2">
                        <a href="/allproducts" id="clearFilterButton" class=" btn-secondary" style="display: none;">Clear</a>
                    </div>
                  </div>
                  <p>
                    <!-- sort start -->
                  <p class="d-flex justify-content-center ">
                    <a class="btn border border-2 border-success fw-bold w-100 shadow" data-bs-toggle="collapse" href="#collapseExample" role="button"
                      aria-expanded="false" aria-controls="collapseExample">
                      Sorted By
                    </a>
                  </p>
                  <div class="collapse border border-2 border-success" id="collapseExample">
                    <div class="card card-body">
                      <ul class="list-unstyled">
                        <li class="bg-light text-center border">
                          <span class="fw-bold sortBy" onclick="sortFilter('newReleases')">New releases</span>
                        </li>

                        <li onclick="sortFilter('ascending')" class="bg-light text-center border">
                          <span class="fw-bold sortBy">Price: Low to High</span>
                        </li>

                        <li onclick="sortFilter('descending')" class="bg-light text-center border">
                          <span class="fw-bold sortBy">Price: High to low</span>
                        </li>
                      </ul>
                    </div>
                  </div>
                  <!-- sort colaps end -->
                  <!-- sort end -->
                  

        </div>

        <!-- product listing -->
        <div class="col-md-10 col-sm-8 mt-4">
          <div class="row" id="productListContainer">
            <!-- search error -->
            <% if (errorMessage) { %>
              <div class="alert alert-danger text-center mt-5">
                <%= errorMessage %>
              </div>
              <% } %>
                <!--  -->
                <% listing.forEach((product, i)=> { %>
                  <div class="col-lg-3 col-md-6 col-sm-12 d-flex justify-content-center mt-3 mb-5">
                    <!-- < inside// data-category="<%=product.categoryName %>" -->
                    <a href="/products/<%=product._id%>" class="text-decoration-none">
                      <div class="card shado zoom" style="width: 16rem;">
                        <div class="">
                          <img style="max-height: 270px;" class="card-img-top img-fluid"
                            src="/img/books/<%= product.thumbnail %>" alt="Book image">
                        </div>
                        <div class="card-body">
                          <div class="text-center">
                            <span class="card-title text-center fs-6 fw-bold text-truncate d-inline-block"
                              style="max-width: 200px;">
                              <%=product.name%>
                            </span>
                          </div>
                          <div class="d-flex">
                            <div class="m-auto gap-3">
                              <span class="card-text text-success fw-bolder fs-3">₹<%= product.price%></span>
                              <span class="card-text text-warning fw-bold"><del>₹<%= product.initialPrice %>
                                    </del></span>
                              <span class="card-text text-info">
                                <%= product.discount %>%off
                              </span>
                            </div>
                          </div>
                          <p class="text-center">Rating: </p>
                        </div>
                      </div>
                    </a>
                  </div>
                  <!--  -->
                  <% }) %>
          </div>
        </div>
      </div>
    </div>
    <% } %>
      <!-- pagination -->
      <!-- your existing html code ... -->
      <div class="d-flex justify-content-center mb-2">
        <% if (page> 1) { %>
          <label onclick="location.href='/allproducts?category=<%=category%>&page=<%= page - 1 %>'"
            style="cursor: pointer;">
            <i class="bi bi-arrow-left-circle"></i>
          </label>
          <% } %>
            <span class="mx-3 shadow fw-bold">Page <%= page %></span>
            <% if (listing.length===itemsPerPage) { %>
              <label onclick="location.href='/allproducts?category=<%=category%>&page=<%= page + 1 %>'"
                style="cursor: pointer;">
                <i class="bi bi-arrow-right-circle"></i>
              </label>
              <% } %>
      </div>





