  <script>
    $(document).ready(function () {
  // Check user's login status when the page loads
  checkLoginStatus();

  // Function to check the user's login status
  function checkLoginStatus() {
    $.ajax({
      url: "/login", // Replace this with the appropriate route in your backend to check login status
      type: "GET",
      dataType: "json",
      success: function (data) {
        if (data.isLoggedIn) {
          // User is logged in, show the logout button
          $("#loginButton").hide();
          $("#logoutButton").show();
        } else {
          // User is not logged in, show the login button
          $("#loginButton").show();
          $("#logoutButton").hide();
        }
      },
      error: function (error) {
        // Handle error, for example, show an alert
        console.log("Error checking login status: ", error);
      },
    });
  }
});

  </script>

