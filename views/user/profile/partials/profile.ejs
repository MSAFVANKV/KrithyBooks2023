        <% 
        let hasPrimaryAddress = false;
        
        currentUser.addresses.forEach(function(address) { 
            if(address.primary) {
                hasPrimaryAddress = true;
            }
        });
        
        currentUser.addresses.forEach(function(address) { 
            if(address.primary) {
                %>
