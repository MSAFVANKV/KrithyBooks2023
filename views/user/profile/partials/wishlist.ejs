<%- include('../layouts/_header') %>

<div class="container">
    <div class="row mt-5">
        <%- include('../layouts/profileSearchBar') %>

        <div class="col-lg-8 rounded-3 bg-profile ms-3" style="width: 50rem;"><!-- main div -->
            <div class=" pt-2">
                <span class="text-black text-capitalize fs-4 fw-bolder">My Profile</span>
                <!-- profile add -->
                <div class="float-end col-1">
                    <img src="/assets/img/books/BURIED THOUGHTS-ONE LIFE, MANY STORIES_bookTitle_1690794200055.png" id="profile-pic" class="img-fluid" alt="" style="cursor: pointer;">
                    <input type="file" id="upload" style="display: none;">
                    <button id="crop" style="display: none;">Crop</button>
                    <div id="preview"></div>
                </div>
            </div>
            <small class="fw-bold">Your wishlist will showup here</small class="fw-bold">
            <hr>

            <!-- Wishlist items div -->
            <div class="rounded-3 d-flex flex-wrap justify-content-center" id="wishlist">
                <% if(userWishlist!= null && userWishlist.products.length !=0){%>
                    <% userWishlist.products.forEach((product) => { %>
                        <div class="mt-3 col-lg-3 col-md-3 col-sm-6 mb-5 d-flex justify-content-center" style="width: 15rem;">
                            <div class="card shadow-lg prod_card" >
                                <div class="card card_img">
                                    <a href="/products/<%=product._id%>">
                                        <img src="/img/books/<%=product.thumbnail%>" class="card-img-top" alt="Book Image">
                                    </a>
                                </div>
                                <div class="card-body">
                                    <div class="text-center">
                                        <span class="card-title text-center fs-6 fw-bold text-truncate d-inline-block" style="max-width: 170px;"><%=product.name%></span>
                                    </div>
                                    <div class="d-flex">
                                        <div class="m-auto gap-3">
                                            <span class="card-text text-success fw-bolder fs-3">₹<%= product.price%></span>
                                            <span class="card-text text-warning fw-bold"><del>₹<%= product.initialPrice %></del></span>
                                            <span class="card-text text-info"><%= product.discount %>%off</span>
                                        </div>
                                    </div>
                                    <div class="d-flex">
                                        <button class="btn btn-primary add-to-cart me-2">Add to Cart</button>
                                        <button href="/users/" class="btn btn-danger remove-from-wishlist" onclick="removeFromWishlist('<%=product._id%>')">Remove</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <h5 class="text-center my-4 fw-light fw-bold">
                        No products on your wishlist yet.
                    </h5>
                    <div class="text-center my-4 fw-bold">
                        <a href="/" class="fst-italic text-success ms-1"
                            >Continue shopping <i class="fa fa-arrow-right"></i
                        ></a>
                    </div>
                <% } %>
            </div> <!-- End of Wishlist items div -->

        </div> <!-- End of main div -->
    </div>
</div>

<%- include('../layouts/_footer') %>
