
<%- include('../layouts/_header') %>

<%- include('../layouts/profileSearchBar') %>
          <div class="pt-2">
            <span class="text-black text-capitalize fs-4 ">My Profile</span>
              <!-- profile add -->
            <div class="float-end col-1">
             <div class="profilePage border rounded-3  no-cursor" style="background-image: url('/img/users/<%=currentUser.photo%>');">
             </div>     
            </div>
          </div>
          <small class="">Your Wishlist items will showup here</small>
          <hr>
            <!-- Wishlist items div -->
            <div class="rounded-3 d-flex flex-wrap justify-content-center" id="wishlist">
                <% if(userWishlist!= null && userWishlist.products.length !=0){%>
                    <% userWishlist.products.forEach((product) => { %>
                        <div class="mt-3 col-lg-3 col-md-3 col-sm-6 mb-5 d-flex justify-content-center" style="width: 15rem;">
                            <div class="card shadow-lg prod_card" >
                                <div class="card card_img">
                                    <a href="/products/<%=product._id%>">
                                        <img src="/img/books/<%=product.thumbnail%>" class="card-img-top" alt="Book Image">
                                    </a>
                                </div>
                                <div class="card-body">
                                    <div class="text-center">
                                        <span class="card-title text-center fs-6  text-truncate d-inline-block" style="max-width: 170px;"><%=product.name%></span>
                                    </div>
                                    <div class="d-flex">
                                        <div class="m-auto gap-3">
                                            <span class="card-text text-success  fs-3">₹<%= product.price%></span>
                                            <span class="card-text text-warning "><del>₹<%= product.initialPrice %></del></span>
                                            <span class="card-text text-info"><%= product.discount %>%off</span>
                                        </div>
                                    </div>
                                    <div class="d-flex">
                                        <button class="btn btn-primary add-to-cart me-2"onclick="addToCartFromWishlist('<%=product._id%>')">Add to Cart</button>
                                        <button class="btn btn-danger remove-from-wishlist" onclick="removeFromWishlist('<%=product._id%>')">Remove</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <h5 class="text-center my-4 fw-light ">
                        No products on your wishlist yet.
                    </h5>
                    <div class="text-center my-4 ">
                        <a href="/allproducts?category=newReleases" class="fst-italic text-success ms-1"
                            >Continue shopping <i class="fa fa-arrow-right"></i
                        ></a>
                    </div>
                <% } %>
            </div> <!-- End of Wishlist items div -->

        </div> <!-- End of main div -->
    </div>
</div>

<%- include('../layouts/_footer') %>
