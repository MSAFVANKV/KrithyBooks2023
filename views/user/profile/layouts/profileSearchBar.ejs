        <script>
          // get elements
          const toggle = document.getElementById('toggle');
          const sidebar = document.getElementById('sidebar');
          const firstSettings = document.querySelector('.firstSettings');
          
          // function to adjust view based on window width
          function adjustView() {
              if(window.innerWidth > 992) {
                  firstSettings.style.display = 'block';
                  toggle.style.display = 'none';
                  // deactivate sidebar and toggle if window is resized while sidebar is active
                  toggle.classList.remove('active');
                  sidebar.classList.remove('active');
              } else {
                  firstSettings.style.display = 'none';
                  toggle.style.display = 'block';

              }
          }
      
          // click event
          document.onclick = function(e) {
              if(e.target.id !== 'sidebar' && e.target.id !== 'toggle') {
                  toggle.classList.remove('active');
                  sidebar.classList.remove('active');
              }
          }
      
          // toggle onclick event
          toggle.onclick = function() {
              toggle.classList.toggle('active');
              sidebar.classList.toggle('active');
          }
        
          // listen for window resize
          window.addEventListener('resize', adjustView);
      
          // call the function on page load to initialize the correct view
          adjustView();
      
      </script>
      