<%-include('../layouts/_header')%> <%-include('../layouts/head_links')%> 

<div class="container">
  <div class="line-break text-center py-4">
    <span class="shadow-heading">Edit Author</span>
  </div>
  <div class="row mb-5 pt-4">
    <p class="text-danger mt-0 pt-4 text-uppercase text-center">

    </p>
    <div class="col-lg-5 mx-auto ">        
      <form action="" method="post" class="d-flex align-items-center flex-column ">
        <div class="w-75">
          <input
            required
            class="form-control my-3 "
            id="editAuthor"
            placeholder="Change Author Name"
            value="<%if(author){%><%=locals.author.name%><%}%>"
            name="name"
            style="text-transform: none;"
          />
        </div>
        <div class="mb-3">
          <label for="thumbnail" class="px-1" style="font-size: 0.75rem;">Upload thumbnail</label>
        <input
          class="form-control"
          id="thumbnail"
          name="thumbnail"
          type="file"
          onchange="loadFile1(event)"
          value=""
          required
        />
        <p ><img id="output1" width="100" style="margin-top: 10px;"/></p>
      </div>
        <input type="submit" class="text-center btn btn-primary w-25" value="Save" />
      </form>
    </div>
  </div>
</div>
